{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "*": [
                "./src/*"
            ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}